# BOS-AI Configuration Template
# Copy this file to .env and configure for your business

# ===== BUSINESS CONFIGURATION =====
BUSINESS_NAME="Your Business Name"
BUSINESS_OWNER="Your Name"
BUSINESS_INDUSTRY="Your Industry"
BUSINESS_STAGE="startup|growth|scale|mature"

# ===== BUSINESS CHASSIS CONFIGURATION =====
# Target metrics for Business Chassis optimization
TARGET_PROSPECTS=1000
TARGET_LEAD_CONVERSION=0.15
TARGET_CLIENT_CONVERSION=0.25
TARGET_AVERAGE_SPEND=500
TARGET_TRANSACTION_FREQUENCY=3
TARGET_MARGIN=0.30

# ===== AI AGENT CONFIGURATION =====
# Central Intelligence Settings
ENABLE_BUSINESS_CHASSIS_ENGINE=true
ENABLE_CLIENT_SUCCESS_INTELLIGENCE=true
ENABLE_STRATEGIC_SYNTHESIS=true

# Engine Teams Configuration
ENABLE_DISCOVERY_ENGINE=true
ENABLE_CREATION_ENGINE=true
ENABLE_DELIVERY_ENGINE=true
ENABLE_GROWTH_ENGINE=true

# Business Function Teams
ENABLE_MARKETING_AGENTS=true
ENABLE_SALES_AGENTS=true
ENABLE_SERVICE_AGENTS=true
ENABLE_FINANCIAL_AGENTS=true
ENABLE_LEGAL_AGENTS=true

# ===== DEPLOYMENT CONFIGURATION =====
DEPLOYMENT_MODE="core|full|minimal"
LOG_LEVEL="info|debug|error"
PERFORMANCE_MONITORING=true
AUTO_ASSET_GENERATION=true

# ===== CLIENT SUCCESS BLUEPRINT =====
PRIMARY_PERSONA_NAME="Primary Customer"
SECONDARY_PERSONA_NAME="Secondary Customer"
TERTIARY_PERSONA_NAME="Tertiary Customer"

# Customer Success Metrics
TARGET_CUSTOMER_SATISFACTION=9.0
TARGET_NET_PROMOTER_SCORE=70
TARGET_CUSTOMER_RETENTION=0.90
TARGET_LIFETIME_VALUE=1500

# ===== INTEGRATION SETTINGS =====
# External API Keys (configure as needed)
OPENAI_API_KEY=""
ANTHROPIC_API_KEY=""
GOOGLE_API_KEY=""

# CRM Integration
CRM_PLATFORM="none|hubspot|salesforce|pipedrive"
CRM_API_KEY=""

# Analytics Integration
ANALYTICS_PLATFORM="none|google|mixpanel|amplitude"
ANALYTICS_API_KEY=""

# ===== SECURITY CONFIGURATION =====
SECRET_KEY="generate-secure-random-key"
ENCRYPTION_KEY="generate-encryption-key"
SESSION_TIMEOUT=3600

# ===== PERFORMANCE SETTINGS =====
CACHE_ENABLED=true
CACHE_TTL=300
MAX_CONCURRENT_AGENTS=10
RESPONSE_TIMEOUT=30

# ===== DEVELOPMENT SETTINGS =====
DEVELOPMENT_MODE=true
DEBUG_AGENTS=false
VERBOSE_LOGGING=false
TEST_MODE=false